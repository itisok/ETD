<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradientdict"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="PySharp English - Turkish"
        android:layout_gravity="center_horizontal" />
    
    <com.example.itsok.englishturkishdictionary.GradientTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dictionary"
        android:textColor="#0000FF"
        app:colorStartGradient="@color/textview_start_gradient"
        app:colorEndGradient="@color/textview_end_gradient"
        android:id="@+id/textView"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/arama"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

<ListView

    android:layout_marginTop="7dp"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/bodur"
    android:clickable="true" />



</LinearLayout>